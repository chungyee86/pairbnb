<% @user.avatars.each do |avatar| %>
<center><%= image_tag avatar %></center>
<% end %>


<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
    <h1 class="text-center">
      <%= @user.first_name %>'s Profile
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
    <h1 class="text-center">
      <%= @user.email %>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
    <h1 class="text-center">
      You're <%= @user.role %>.
    </h1>
  </div>
</div>
<% if current_user == @user %>
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
    <%= link_to "Edit", edit_user_path(current_user), class: "btn btn-default" %>
  </div>
</div>
<p></p>
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
    <%= link_to "Destroy", user_path(current_user), method: :delete, data: {confirmation: "Are you sure?"}, class: "btn btn-danger" %>
  </div>
</div>
<% end %>

<h2>Resevations</h2>
<table>
    <tr>
      <th>Listing Name</th>
      <th>Check In</th>
      <th>Check Out</th>
      <th>Total Price</th>
      <th>Action</th>
    </tr>

  <% @reservations.each do |reservation| %>
    <tr>
      <td><%= link_to reservation.listing.name, reservation.listing %> </td>
      <td><%= reservation.check_in.strftime('%d %B %Y') %></td> 
      <td><%= reservation.check_out.strftime('%d %B %Y') %></td>
      <td><%= reservation.num_guests %></td>
      <td><%= reservation.total_price %></td>
      <td><%= link_to "Cancel Resevation", reservation, method: :delete, date: {confirmation: "Are you sure to cancel reservation?"}, class="btn btn-danger" %></td>
    </tr>
  <% end %>
</table>